# The ETF Library.

project FF
	: requirements <include>./
	: requirements <include>../Common
	: requirements <include>../TeamFortressLib
   	;

# Declare an alias to the common library
alias common_lib : ..//Common : <link>static ;
alias tf_lib : ..//TeamFortressLib : <link>static ;

# Compile ALL .cpp files and link to Common.lib to create our dll

SOURCES = [ glob ETF_BatchBuild.cpp ] ..//boost_fs ..//boost_regx ..//boost_dt ..//boost_sys common_lib tf_lib ;

#lib omnibot_etf : $(SOURCES) : <tag>@tag <toolset>gcc:<cflags>-w <cflags>-pthread <linkflags>-pthread <cflags>-ffriend-injection ;
lib omnibot_etf : $(SOURCES) : <tag>@tag <toolset>gcc:<cflags>-w <cflags>-fno-strict-aliasing <linkflags>-lrt ;
